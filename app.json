{
  "expo": {
    "name": "מרחק מהבית",
    "description": "אפליקציה זו עוזרת לכם לשמור על תקנות הסגר. באמצעותה תבדקו בקלות את המרחק האווירי מביתכם על מנת להישאר בגבולות המוגדרים בתקנות. בנוסף, במידת הצורך, תוכלו להציג את המרחק לשוטר או לפקח ולהימנע מדו״חות.",
    "slug": "IsHomeFar",
    "version": "1.1.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ishomefar",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "org.grreeenn.ishomefar",
      "buildNumber": "1.1.1",
      "supportsTablet": false,
      "icon": "./assets/images/icon_ios.png",
      "usesIcloudStorage": false,
      "usesAppleSignIn": false,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true,
        "NSLocationWhenInUseUsageDescription": "We need to access your location to calculate the distance to your home"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "locales": {
      "en": "./assets/metadata-translation/english.json",
      "he": "./assets/metadata-translation/hebrew.json"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "android": {
      "versionCode": 3,
      "package": "org.grreeenn.ishomefar",
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"],
      "icon": "./assets/images/icon_android.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon-fg.png",
        "backgroundImage": "./assets/images/adaptive-icon-bg.png",
        "backgroundColor": "#ffffff"
      }

    }
  }
}
